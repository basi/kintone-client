{
  "name": "thecocojp/kintone-rest-api-client-php",
  "description": "Kintone REST API client for PHP generated from OpenAPI specification",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "thecocojp"
    }
  ],
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.0",
    "psr/http-message": "^1.0|^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0|^11.0",
    "phpstan/phpstan": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Kintone\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kintone\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "generate": "@php scripts/generate.php",
    "update-spec": "bash scripts/update-spec.sh",
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=8"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}

